{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "module": "commonjs",
    "noImplicitAny": false,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "jsx": "react",
    "outDir": "lib",
    "paths": {
      "@uifabric/example-component": [
        "src"
      ]
    },
    "types": [
      "webpack-env",
      "mocha"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}